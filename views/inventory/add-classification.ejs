<!DOCTYPE html>
<html lang="en">

<%- include("../partials/head") %>
<%- include("../partials/header") %>
<%- include("../partials/navigation") %>

<body>
    <img src="/images/site/small_check.jpg" alt="checknerboard pattern" class="bg-pattern">
<main>
    <section class="form-container">
        <h1><%= title %></h1>

        <!-- Flash Message -->
        

        <!-- Server-side validation errors -->
        <% if (errors && errors.length > 0) { %>
            <div class="error-list">
            <ul>
                <% errors.forEach(error => { %>
                <li><%= error.msg %></li>
                <% }) %>
            </ul>
            </div>
        <% } %>

        <form id="addClassificationForm" action="/inv/add-classification" method="POST">

            <label for="classification_name">Classification Name</label>
            <input 
                type="text" 
                id="classification_name" 
                name="classification_name" 
                required
                pattern="^[A-Za-z]+$"
                title="Only letters allowed. No spaces or special characters."
                placeholder="Enter classification name"
            >
            <button class="submit" type="submit">Add Classification</button>
        </form>
    </section>
</main>
</body>
<%- include("../partials/footer") %>

</html>