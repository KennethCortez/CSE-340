<!DOCTYPE html>
<html lang="en">

    <%- include("../partials/head") %>


<body>
    <%- include("../partials/header") %>
    <%- include("../partials/navigation") %>

    <img src="/images/site/small_check.jpg" alt="checknerboard pattern" class="bg-pattern">
<main>
    <section class="form-container">
        <h1><%= title %></h1>

        <% if (message && message.length) { %>
        <div class="notice"><%= message %></div>
        <% } %>

        <% if (errors && errors.length > 0) { %>
        <div class="error-list">
            <ul>
            <% errors.forEach(err => { %>
                <li><%= err.msg %></li>
            <% }) %>
            </ul>
        </div>
        <% } %>

        <form id="addInventoryForm" action="/inv/add-inventory" method="POST" novalidate>
            <fieldset>
                <legend>Vehicle information</legend>

                <label for="classificationList">Classification</label>
                <%- classificationList %>

                <label for="inv_make">Make</label>
                <input type="text" id="inv_make" name="inv_make" required maxlength="100"
                    value="<%= typeof inv_make !== 'undefined' ? inv_make : '' %>" />

                <label for="inv_model">Model</label>
                <input type="text" id="inv_model" name="inv_model" required maxlength="100"
                    value="<%= typeof inv_model !== 'undefined' ? inv_model : '' %>" />

                <label for="inv_year">Year</label>
                <input type="number" id="inv_year" name="inv_year" required min="1886" max="2100"
                    value="<%= typeof inv_year !== 'undefined' ? inv_year : '' %>" />

                <label for="inv_price">Price</label>
                <input type="number" id="inv_price" name="inv_price" required step="0.01" min="0"
                    value="<%= typeof inv_price !== 'undefined' ? inv_price : '' %>" />

                <label for="inv_miles">Miles</label>
                <input type="number" id="inv_miles" name="inv_miles" step="1" min="0"
                    value="<%= typeof inv_miles !== 'undefined' ? inv_miles : '' %>" />

                <label for="inv_color">Color</label>
                <input type="text" id="inv_color" name="inv_color" maxlength="50"
                    value="<%= typeof inv_color !== 'undefined' ? inv_color : '' %>" />

                <label for="inv_image">Image Path</label>
                <input type="text" id="inv_image" name="inv_image" required maxlength="255"
                    value="<%= typeof inv_image !== 'undefined' ? inv_image : '/images/vehicles/no-image.png' %>" />

                <label for="inv_thumbnail">Thumbnail Path</label>
                <input type="text" id="inv_thumbnail" name="inv_thumbnail" required maxlength="255"
                    value="<%= typeof inv_thumbnail !== 'undefined' ? inv_thumbnail : '/images/vehicles/no-image-tn.png' %>" />

                <label for="inv_description">Description</label>
                <textarea id="inv_description" name="inv_description" required maxlength="2000"><%= typeof inv_description !== 'undefined' ? inv_description : '' %></textarea>

                <div class="form-actions">
                    <button type="submit" class="submit">Add Vehicle</button>
                </div>
            </fieldset>
        </form>
    </section>
</main>
    <%- include("../partials/footer") %>
</body>
</html>